(defwidget power []
  (button
    :onclick "wlogout&"
    (image
      :path "./hyprland.png"
      :image-width 24
      :image-height 28)))

(defwindow topbar
  :monitor 0
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "30px"
                      :anchor "top center")
  :stacking "fg"
  :reserve (struts :distance "40px" :side "top")
  :exclusive true
  :windowtype "dock"
  :wm-ignore false
  (box
    (power)
    (box)
    (box)
    (shortcuts)))
